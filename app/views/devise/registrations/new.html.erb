<div class="container">

  <div class="row mt-5">

    <h2 class="col-2 mx-auto">新規登録</h2>

  </div>

  <%= form_with model: @user, url: user_registration_path do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

  <div class="row mt-3">

    <div class="col-3"></div>

    <div class="col-3 text-center">

      <h5>名前</h5>

    </div>

    <div class="col-3">

      <%= f.text_field:name,class:'form-control' %>

    </div>

  </div>

  <div class="row mt-3">

    <div class="col-3"></div>

    <div class="col-3 text-center">

      <h5>メールアドレス</h5>

    </div>

    <div class="col-3">

      <%= f.email_field :email, autofocus: true, autocomplete: "email",class:'form-control' %>

    </div>

  </div>

  <div class="row mt-3">

    <div class="col-3"></div>

    <div class="col-3 text-center">

      <h5>パスワード(6文字以上)</h5>

    </div>

    <div class="col-3">

      <%= f.password_field :password, autocomplete: "new-password",class:'form-control' %>

    </div>

  </div>

  <div class="row mt-3">

    <div class="col-3"></div>

    <div class="col-3 text-center">

      <h5>パスワード(確認用)</h5>

    </div>

    <div class="col-3">

      <%= f.password_field :password_confirmation, autocomplete: "new-password",class:'form-control' %>

    </div>

  </div>

  <div class="row mt-4">

    <div class="col-2 mx-auto">

      <%= f.submit "登録",class:'btn btn-success btn-block' %>

    </div>

  </div>

  <% end %>

</div>

