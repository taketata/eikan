<div class="container">

  <div class="row mt-5">

    <h2 class="col-2 mx-auto">ログイン</h2>

  </div>

  <%= form_with model: @user, url: user_session_path do |f| %>

  <div class="row mt-3">

    <div class="col-3"></div>

    <div class="col-3 text-center">

      <h5>メールアドレス</h5>

    </div>

    <div class="col-3">

      <%= f.email_field :email, autofocus: true, autocomplete: "email",class:'form-control' %>

    </div>

  </div>

  <div class="row mt-3">

    <div class="col-3"></div>

    <div class="col-3 text-center">

      <h5>パスワード</h5>

    </div>

    <div class="col-3">

      <%= f.password_field :password, autocomplete: "current-password",class:'form-control' %>

    </div>

  </div>

  <div class="row mt-4">

    <div class="col-2 mx-auto">

      <%= f.submit "ログイン",class:'btn btn-success btn-block' %>

    </div>

  </div>

  <% end %>

</div>



